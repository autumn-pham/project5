<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../partials/head.html.ejs') %>
  </head>
  <body>
    <%- include('../partials/nav.html.ejs') %>
    <div class="main-form register-form">
      <h3>Register</h3>
        <ul>
          <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
          <li><%= error.message %></li>
          <% }) %> <% } %>
        </ul>
        <form action="/register" method="POST">
           <p>Username: 4-16 characters, a-Z, 0-9, underscores, and dashes</p>
           <p>Pasword: 8-128 characters, REQUIRES 1 lowercase, uppercase, and digit</p>
           <label for="first_name">First Name: </label>
           <input type="text" id="first_name" name="first_name" autofocus> <br />
           <label for="last_name">Last Name: </label>
           <input type="text" id="last_name" name="last_name" autofocus> <br />
           <label for="username">Username: </label>
           <input type="text" id="username" name="username" autofocus> <br />
           <label for="password">Password: </label>
           <input type="password" id="password" name="password"> <br />
           <label for="passConf">Confirm Password: </label>
           <input type="password" id="passConf" name="passConf"><br />
           <input class="submitButton" type="submit" value="REGISTER">
          </form>
           <p>Or <a href="/login">login</a> if you already have an account.</p>
        </div>
        <footer class="page-footer">
            <%- include('../partials/footer.html.ejs') %>
        </footer>
  </body>
</html>

<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>

  </head>
  <body>
    <!-- MAIN STATIC STUFF  -->
    <div class="container">

    <!-- DATA DISPLAY -->

    <div class="data-display">
    <!-- OFFERS -->

      <div class="offers-display">
        <div class="offers-data">
          <h4>ENTRIES</h4>
            <table class="table table-bordered">
              <thead>
                <tr>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col">City</th>
                <th scope="col">Sport</th>
                <th scope="col">Activity</th>
                </tr>
              </thead>
              <tbody>
                <% for (let i = 0; i < offers.length; i++) { %>
                <tr>
                  <td><a href="/offers/<%= offers[i].id %>"><%= offers[i].firstname%> <%=offers[i].lastname %></a> </td>
                  <td><%= offers[i].age %></td>
                  <td><%= offers[i].city %></td>
                  <td><%= offers[i].sport %></td>
                  <td><%= offers[i].activity %></td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>

          <div class="new-offer-form">
            <h4>I am offering!</h4>
            <form action="/offers" method="POST">
              <div class="form-group">
                <input type="text" name="firstname" placeholder="FIRST NAME" required /><br/>
                <input type="text" name="lastname" placeholder="LAST NAME" required /><br/>
                <input type="number" name="age" placeholder="AGE"/><br/>
                <input type="text" name="city" placeholder="CITY" required /><br/>
                <input type="text" name="sport" placeholder="SPORT" required /><br/>
                <input type="text" name="activity" placeholder="ACTIVITY" required /><br/>
                <input type="submit" value="ADD" class="add-btn" />
              </div>
              </form>
          </div>
            <!-- CLOSING OUT OFFERS-DISPLAY -->
          </div>

        

          <a href="/matches">View matches</a>
    <!-- CLOSING OUT DATA-DISPLAY DIV -->
    </div>
<!-- CLOSING OUT CONTAINER DIV -->
    </div>

    <!-- FOOTER -->
    <footer class="page-footer">

    </footer>
  </body>
</html>
